<h2>Create your homie below</h2>

<%= form_for @employee do |f| %><br>

<% if flash[:errors] %>
  <%  flash[:errors].each do |message| %>
  <p><%= message %></p>
  <% end %>
<% end %>

<%= f.label :first_name %><br>
<%= f.text_field :first_name %><br><br>
<%= f.label :last_name %><br>
<%= f.text_field :last_name %><br><br>
<%= f.label :alias %><br>
<%= f.text_field :alias %><br><br>
<%= f.label :title %><br>
<%= f.text_field :title %><br><br>
<%= f.label :office %><br>
<%= f.text_field :office %><br><br>
<%= f.collection_select(:dog_id, Dog.all, :id, :name) %><br><br>

<% end %>


<%= f.submit "Create your homie now." %>

<% end %>
